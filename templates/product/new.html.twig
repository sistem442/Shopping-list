{% extends 'base.html.twig' %}
{% block title %}Add Product{% endblock %}
{% block stylesheets %}
<style>
    .row { max-width: 400px; width: 95%; font: 18px/1.5 sans-serif; margin: auto; padding: 10px;}
    .col { background: #F5F5F5; padding: 2px 6px; width:50% float:center }
    .form-label { text-align: right; background: #F5F545; width: 40%; display: inline-block;}
    .form-control { float:right; text-align: left; background: #F5F595; }
</style>
{% endblock %}
{% block body %}
{{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="row">
        <div class="col">
            {{ form_row(form.name) }}
        </div>
        <div class="col" id="description">
            {{ form_row(form.description) }}
        </div>
        <div class="col" id="price">
            {{ form_row(form.price) }}
        </div>
        <div class="col" id="date">
            {{ form_row(form.date) }}
        </div>
        <div class="col" id="save">
            {{ form_row(form.save) }}
        </div>
    </div>
{{ form_end(form) }}
{% endblock %}